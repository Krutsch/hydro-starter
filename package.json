{
  "scripts": {
    "start": "snowpack dev",
    "start:secure": "snowpack dev --secure",
    "build": "snowpack build",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:code": "eslint src/**/*.{js,ts} --fix",
    "lint:style": "stylelint src/**/*.{css,scss} --fix",
    "test": "tsc -b ts.test.json && wtr src/**/*.test.html --node-resolve --coverage && tsc -b --clean ts.test.json",
    "update": "npx npm-check-updates -u && npm i && npm outdated"
  },
  "dependencies": {
    "hydro-js": "^1.0.8"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.1.5",
    "@snowpack/plugin-sass": "^1.1.1",
    "@snowpack/plugin-typescript": "^1.1.0",
    "@snowpack/plugin-webpack": "^2.1.1",
    "@types/snowpack-env": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "@web/test-runner": "^0.9.12",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.2.0",
    "snowpack": "^2.17.1",
    "stylelint": "^13.8.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0",
    "tailwindcss": "^2.0.1",
    "typescript": "^4.1.2",
    "watch": "^1.0.2"
  }
}
