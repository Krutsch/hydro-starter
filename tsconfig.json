{
  "include": ["src"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "WebWorker"],
    "checkJs": true,
    "jsxFactory": "h",
    "moduleResolution": "Bundler"
  }
}
